class Solution:
    def numberOfMatches(self, n: int):
        
        count_matches=0
        while(n>1):
            
            if n%2==0:
                
                count_matches=count_matches+n/2
                n=n/2
                
            else:
                count_matches=count_matches+(n-1)/2
                n=((n-1)/2)+1
            
        
        return int(count_matches)

